#include <bits/stdc++.h>
#define all(x) begin(x), end(x)
#define int long long
using namespace std;
using pi = pair<int, int>;

void solve()
{
	int n;
	cin >> n;
	int ptr2 = n / 2 + 1;
	int ptr1 = ptr2 - 1;
	for (int i = 0; i < n; i++) {
		if (i % 2 == 0) cout << ptr2++ << ' ';
		else cout << ptr1-- << ' ';
	}
}

signed main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);

	solve();
}